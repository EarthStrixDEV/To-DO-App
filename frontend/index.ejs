<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>TO DO APP</title>
        <link rel="stylesheet" href="index.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    </head>
    <body>
        <form class="container" action="/insert" method="post">
            <label for="" id="Add">Add: <input type="text" name="title"/></label>
            <label for="" id="Add">Description: <input type="text" name="detail"/></label>
            <label for="" id="Add">Time Action: <input type="datetime-local" name="timeAction"/></label>
            <input type="hidden" name="time"/>
            <button class="btn btn-success" id="btn-add">Done</button>
        </form>
        <div class="list-container">
            <table>
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Title</th>
                        <th>Time Add</th>
                        <th>Time Action</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- td -->
                    <% Object.values(data).forEach(function(item) { %>
                        <tr>
                            <td><input type="checkbox" name="check"/></td>
                            <td><%= item.title %></td>
                            <td><%= item.time %></td>
                            <td><%= item.timeAction %></td>
                            <div class="detail-content" style="display: none;">
                                <h3 style="margin-bottom: 1.3rem;">Description</h3>
                                <p>- <%= item.detail %></p>
                            </div>
                            <td><a href="/delete/<%= item._id %>" class="btn btn-danger" onclick="return confirm('Are you delete this?')">Delete</a></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <script src="index.js"></script>
    </body>
</html>